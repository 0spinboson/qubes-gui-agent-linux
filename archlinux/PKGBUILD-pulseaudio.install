## arg 1:  the new package version
post_install() {
  sed -i '/^autospawn/d' /etc/pulse/client.conf
  echo autospawn=no >> /etc/pulse/client.conf

  ldconfig
}

post_upgrade() {
  post_install
}

## arg 1:  the old package version
pre_remove() {
  systemctl disable qubes-gui-agent.service
}

post_remove() {
  ldconfig
}

